<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="20dp"
    android:elevation="20dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_single_ticket"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/person_s"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/text_ticket_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/image_single_ticket"
            app:layout_constraintTop_toTopOf="@id/image_single_ticket"
            app:layout_constraintEnd_toStartOf="@id/button_update_ticket"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            tools:text="khu vuc:" />

        <TextView
            android:id="@+id/text_ticket_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/text_ticket_id"
            app:layout_constraintTop_toBottomOf="@id/text_ticket_id"
            app:layout_constraintEnd_toStartOf="@id/button_update_ticket"
            android:layout_marginTop="5dp"
            tools:text="Ten NV:" />

        <TextView
            android:id="@+id/text_ticket_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@id/button_update_ticket"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/text_ticket_type"
            app:layout_constraintTop_toBottomOf="@id/text_ticket_type"
            tools:text="Ca:" />

        <TextView
            android:id="@+id/text_ticket_expiration_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/text_ticket_price"
            app:layout_constraintTop_toBottomOf="@id/text_ticket_price"
            app:layout_constraintEnd_toStartOf="@id/button_update_ticket"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            tools:text="Date:" />

        <ImageButton
            android:id="@+id/button_update_ticket"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:background="@color/white"
            android:src="@drawable/ic_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_ticket_id"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/button_delete_ticket"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:background="@color/white"
            android:src="@drawable/ic_delete"
            app:layout_constraintBottom_toBottomOf="@id/text_ticket_expiration_date"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>